{
	"name": "@ripple.tju/robot-service-workspace",
	"private": true,
	"scripts": {
		"deps:install": "npm -v && npm install",
		"lint": "eslint --fix packages/**/*.mjs",
		"test": "npm test --workspaces --if-present",
		"coverage": "c8 --reporter=lcov npm run test",
		"publish": "npm run lint && lerna publish --no-private"
	},
	"workspaces": [
		"packages/robot-service",
		"packages/cli",
		"packages/control",
		"example",
		"test"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:ripple-tju/robot-service.git"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"@produck/eslint-rules": "^0.1.0",
		"c8": "^10.1.2",
		"eslint": "^9.14.0",
		"globals": "^15.12.0",
		"lerna": "^8.1.9"
	}
}
